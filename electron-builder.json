
{
  "appId": "com.hackbridge.app",
  "productName": "HackBridge",
  "directories": {
    "buildResources": "public",
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "src/electron/**/*",
    "src/python/**/*"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "mac": {
    "category": "public.app-category.education",
    "target": ["dmg", "zip"]
  },
  "win": {
    "target": ["nsis", "portable"],
    "icon": "public/favicon.ico",
    "artifactName": "HackBridge-Setup-${version}.${ext}"
  },
  "portable": {
    "artifactName": "HackBridge-Portable-${version}.${ext}"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Education"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "HackBridge"
  },
  "extraResources": [
    {
      "from": "src/python",
      "to": "python"
    }
  ],
  "publish": null
}
